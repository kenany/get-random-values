{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "extends": ["ultracite"],
  "linter": {
    "rules": {
      "complexity": {
        "noExcessiveCognitiveComplexity": "off"
      },
      "correctness": {
        "noUnusedVariables": {
          "level": "error",
          "options": {
            "ignoreRestSiblings": true
          }
        }
      },
      "nursery": {
        "noAwaitInLoop": "off",
        "noShadow": "off"
      },
      "performance": {
        "useTopLevelRegex": "off"
      },
      "style": {
        "noDoneCallback": "off",
        "noNonNullAssertion": "off",
        "noParameterAssign": "off"
      }
    }
  }
}
